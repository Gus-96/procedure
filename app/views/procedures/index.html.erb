<p id="notice"><%= notice %></p>
<h1>Procedures</h1>
<p><%= link_to 'New Procedure', new_procedure_path , class:"btn btn-primary", role:"button" %></p>
<table class="table"> 
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td><%= procedure.title %></td>
        <td><%= procedure.description %></td>
        <td><%= link_to 'Show', procedure %></td>
        <td><%= link_to 'Edit', edit_procedure_path(procedure) %></td>
        <td><%= link_to 'Destroy', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "Advanced Search", new_search_path, type:"button", class:"btn btn-secondary" %></p>
