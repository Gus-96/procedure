<h1>Search Results</h1>
<p><%= link_to "Back", new_search_path %></p>

<% if @search.search_procedure.empty? %>
    <p>No procedure were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @search.search_procedure.each do |procedure| %>
            <tr>
                <td><%= procedure.title %></td>
                <td><%= procedure.description %></td>
                <td><%= link_to 'Show', procedure %></td>
                <td><%= link_to 'Edit', edit_procedure_path(procedure) %></td>
                <td><%= link_to 'Destroy', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
</table>
<% end %>